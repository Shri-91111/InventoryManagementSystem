@model IMS.Models.ProductDeptMaster

@{
    ViewData["Title"] = "Create";
}
<style>
    .form-control {
        border: 2px solid #5551ff;
        border-radius: 5px;
        height: 50px;
        line-height: normal;
        color: black;
        display: block;
        width: 100%;
        box-sizing: border-box;
        user-select: auto;
        font-size: 16px;
        padding: 0 6px;
        padding-left: 12px;
    }

        .form-control:focus {
            border: 3px solid #5551ff;
        }
</style>
<br />

<h4 id="Hader4">Product Category master</h4>
<hr />
<br />
<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-info" />
            </div>
        </form>
    </div>
</div>
<h2>Category List</h2>

@if (ViewBag.productDeptMasters != null)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Serial No.</th>
           
                <th>Description</th>
               @*  <th>SubItems Count</th> *@
            </tr>
        </thead>
        <tbody>
            @{
                int serialNumber = 1;
            }
            @foreach (var productDeptMaster in ViewBag.productDeptMasters)
            {
                <tr>
                    <td>@serialNumber</td>
              
                    <td>@productDeptMaster.Description</td>
                  @*   <td>@productDeptMaster.SubItemsMasters.Count</td> *@
                </tr>
                serialNumber++;
            }
        </tbody>
    </table>
}
else
{
    <p>No ProductDeptMasters available.</p>
}
<div>
    <a asp-action="Index" >Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
