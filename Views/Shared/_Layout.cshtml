        #headerTitle {
            color: navy;
            font-size: 1.5rem;
            font-weight: bold;
            font-family: 'Nirmala UI', Arial, sans-serif;
        }
        /* Styling for input type text */
        input[type="text"] {
            font-size:large;
        }

        /* Styling for select element */
        select {
            font-size: large;
        }

           

        #address {
            font-size: 0.8rem;
            color: #333;
            margin-top: 5px;
        }
        #address {
            font-size: 19px;
            font-weight: bold;
            color: navy;
            font-family: 'Nirmala UI', Arial, sans-serif;
        }

        #Hader4 {
