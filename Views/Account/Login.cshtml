@model IMS.Models.LoginMaster

@{
    ViewData["Title"] = "Create";
}
<style>
    .form-control {
        border: 2px solid #5551ff;
        border-radius: 5px;
        height: 50px;
        line-height: normal;
        color: black;
        display: block;
        width: 100%;
        box-sizing: border-box;
        user-select: auto;
        font-size: 16px;
        padding: 0 6px;
        padding-left: 12px;
    }

        .form-control:focus {
            border: 3px solid #5551ff;
        }
</style>
<head>
    <style>
        #Hader4 {
            background-color: #76a3d1;
            font-weight: bold;
            text-align: center;
            text-transform: uppercase;
            color: white;
            border: 2px solid #76a3d1;
            padding: 10px;
            border-radius: 10px;
            letter-spacing: 0.1em;
            font-size: large;
        }




        button {
            width: 200px;
            padding: 20px;
            font-size: 20px;
            font-weight: 700;
            cursor: pointer;
            border: none;
        }

        .button-box-special {
            background: black;
        }

        button:focus {
            outline: none;
        }

        .ten {
            background: white;
            color: red;
            border: 2px solid red;
            border-radius: 5px;
            transition: all 300ms;
        }

            .ten:hover {
                color: black;
                border: 2px solid black;
                border-radius: 50px;
            }

        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            transition: 0.3s;
            width: 40%;
            margin: auto;
            text-align: center;
        }

            .card:hover {
                box-shadow: 0 8px 16px 0 rgba(0, 0, 0, 0.2);
            }

        .container {
            padding: 2px 16px;
        }

            .container::after, .container::before {
                content: "";
                clear: both;
                display: table;
            }

            .container img {
                border-radius: 50%;
                float: left;
                height: 100px;
                width: 100px;
                margin-right: 20px;
                border: 5px solid white;
            }

                .container img.right {
                    float: right;
                    margin-left: 20px;
                    margin-right: 0;
                }

            .container p {
                font-size: 20px;
                font-weight: bold;
                margin-top: 6px;
            }

            .container span {
                font-size: 18px;
            }

        #text-danger {
            color: red;
            font-size: 15px;
        }
    </style>

</head>
<br />
<br />
<h3 id="Hader4">SIGN IN/ಸೈನ್ ಇನ್ ಮಾಡಿ </h3>
<hr />
<div class="card">

    <div class="card-body">
        <form asp-action="Create" asp.asp-controller="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" id="text-danger"></span>
            </div><br />
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input asp-for="Password" class="form-control" type="password" />
                <span asp-validation-for="Password" id="text-danger"></span>
            </div><br />
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-info" style="background-color:#76a3d1;font-weight:bold" />
                <input type="reset" value="Cancel" class="btn btn-danger" style="font-weight:bold" />
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
